{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "outDir": "./.serverless",
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "serverless.ts"],
  "exclude": ["node_modules", ".serverless", ".esbuild"]
}
