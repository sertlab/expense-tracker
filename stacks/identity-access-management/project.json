{
  "name": "identity-access-management",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "stacks/identity-access-management",
  "projectType": "application",
  "targets": {
    "deploy": {
      "executor": "nx:run-commands",
      "options": { 
        "cwd": "stacks/identity-access-management", 
        "command": "npx serverless deploy",
        "env": {
          "NODE_OPTIONS": "--loader ts-node/esm"
        }
      }
    },
    "remove": {
      "executor": "nx:run-commands",
      "options": { "cwd": "stacks/identity-access-management", "command": "npx serverless remove" }
    },
    "info": {
      "executor": "nx:run-commands",
      "options": { "cwd": "stacks/identity-access-management", "command": "npx serverless info" }
    }
  },
  "tags": ["stack", "iam", "cognito", "auth"]
}
